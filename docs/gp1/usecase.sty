\ProvidesPackage{usecase}[2024/03/19 v1.3 Use Case Document Package]

\RequirePackage{xcolor}
\RequirePackage[most]{tcolorbox}
\RequirePackage{enumitem}
\RequirePackage{changepage}
\RequirePackage{hyperref}

% Color definitions
\definecolor{darkgreen}{RGB}{0,100,0}
\definecolor{lightgreen}{RGB}{235,255,235}

% Counter for use cases
\newcounter{usecasecount}

% Use case environment
\newenvironment{usecase}[1]{%
  \stepcounter{usecasecount}%
  \phantomsection % For correct hyperlinking
  \addcontentsline{toc}{section}{Use Case \theusecasecount: #1}
  \noindent
  \begin{tcolorbox}[
    colback=darkgreen,
    colframe=darkgreen,
    arc=0mm,
    top=3mm,
    bottom=3mm,
    left=0mm,
    right=0mm,
    width=\textwidth,
    boxsep=0pt,
  ]
    \centering
    \textcolor{white}{\LARGE #1}
  \end{tcolorbox}
  \vspace{2mm}
}{%
  \vspace{5mm}
}

% Section box command
\newcommand{\usecasesection}[2]{
  \vspace{1mm}
  \noindent
  \begin{tcolorbox}[
    colback=lightgreen,
    colframe=darkgreen,
    arc=0mm,
    title=#1,
    fonttitle=\large\bfseries,
    coltitle=white,
    top=1mm,
    bottom=1mm,
    left=0mm,
    right=0mm,
    toptitle=1mm,
    bottomtitle=1mm,
    boxsep=1mm,
    width=\textwidth,
  ]
    #2
  \end{tcolorbox}
}

% Commands for specific sections (to be used inside the usecase environment)
\newcommand{\ucbasicinfo}[2]{
  \usecasesection{Basic Information}{
      \textbf{ID Number:} \theusecasecount \quad \textbf{Priority:} #1 \quad \textbf{Type:} #2
  }
}

